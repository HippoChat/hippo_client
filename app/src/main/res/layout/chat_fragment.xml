<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.fragment.app.FragmentContainerView
                android:id="@+id/chat_pane"
                android:visibility="gone"
                android:name="com.example.hippo.ui.main.ChatPaneFragment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/ivChatEmpty"
                android:layout_width="200dp"
                android:layout_height="172dp"
                android:layout_marginTop="96dp"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/pic_no_random_chat" />

            <TextView
                android:id="@+id/tvSearchFriend"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="48dp"
                android:fontFamily="@font/roboto"
                android:text="@string/search_friend"
                android:textAlignment="center"
                android:textColor="@color/dark"
                android:textSize="18sp"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ivChatEmpty" />

            <Button
                android:id="@+id/bt_search"
                android:layout_width="256dp"
                android:layout_height="48dp"
                android:layout_marginTop="72dp"
                android:background="@color/darkBlue"
                android:fontFamily="@font/roboto"
                android:text="@string/search"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="24sp"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvSearchFriend" />

            <TextView
                android:id="@+id/tvFinishChat"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="228dp"
                android:fontFamily="@font/roboto"
                android:text="@string/finish"
                android:textAlignment="center"
                android:textColor="@color/dark"
                android:textSize="18sp"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/bt_finish"
                android:layout_width="256dp"
                android:layout_height="48dp"
                android:layout_marginTop="48dp"
                android:background="@color/darkBlue"
                android:fontFamily="@font/roboto"
                android:text="@string/finish_chat"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="24sp"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvFinishChat" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>

</LinearLayout>